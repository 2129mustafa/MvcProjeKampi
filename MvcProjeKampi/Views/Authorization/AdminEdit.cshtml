@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "AdminEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
@using (Html.BeginForm("AdminEdit", "Authorization", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.AdminId, new { @class = "form-control" })
    @Html.Label("Admin Kullanıcı Adı")
    @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
    <br /><br />
    @Html.Label("Şifreyi Giriniz")
    @Html.TextAreaFor(x => x.AdminPassword, new { @class = "form-control" })
    <br /><br />
    @Html.Label("Role")
    @Html.DropDownListFor(x => x.RoleId, (List<SelectListItem>)ViewBag.role, "-- Rol Seçiniz  --", new { @class = "form-control" })
    <br />
    <button class=" btn btn-outline-success">Admin Guncelle</button>
</div>
}

